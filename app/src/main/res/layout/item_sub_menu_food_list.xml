<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="100dp"
	android:layout_marginBottom="1dp"
	android:background="@color/main_menu_sub_menu_item_color">

	<com.facebook.drawee.view.SimpleDraweeView
		android:id="@+id/simple_draw_food_menu_item"
		android:layout_width="90dp"
		android:layout_height="90dp"
		android:layout_marginRight="16dp"
		app:actualImageResource="@drawable/default_image"
		app:actualImageScaleType="centerCrop"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintRight_toRightOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		app:roundedCornerRadius="5dp" />
	<!--app:riv_border_color="#333333"-->
	<!--app:riv_border_width="2dip"-->
	<!--app:riv_corner_radius="10dp"-->
	<!--app:riv_mutate_background="true"-->


	<TextView
		android:id="@+id/txt_name_item_sub_menu_food_list"
		style="@style/IranSansBold"
		android:layout_width="wrap_content"
		android:layout_height="25dp"
		android:layout_marginRight="16dp"
		android:gravity="center_vertical"
		android:textColor="@color/white"
		android:paddingTop="3dp"
		android:textSize="18sp"
		app:layout_constraintRight_toLeftOf="@id/simple_draw_food_menu_item"
		app:layout_constraintTop_toTopOf="parent" />

	<TextView
		android:id="@+id/txt_price_item_sub_menu_food_list"
		android:layout_width="wrap_content"
		android:layout_height="23dp"
		android:layout_marginRight="16dp"
		android:gravity="center_vertical"
		android:textColor="@color/apple"
		android:textSize="18sp"
		app:layout_constraintRight_toLeftOf="@id/simple_draw_food_menu_item"
		app:layout_constraintTop_toBottomOf="@id/txt_name_item_sub_menu_food_list" />

	<TextView
		android:id="@+id/txt_detail_item_sub_menu_food_list"
		android:layout_width="0dp"
		android:layout_height="40dp"
		android:layout_marginRight="16dp"
		android:ellipsize="end"
		android:gravity="center_vertical|start"
		android:maxLines="2"
		android:minLines="2"
		android:textAlignment="viewStart"
		android:textColor="@color/white"
		android:textSize="14sp"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintLeft_toRightOf="@id/img_btn_delete_item_sub_menu_food_list"
		app:layout_constraintRight_toLeftOf="@id/simple_draw_food_menu_item"
		app:layout_constraintTop_toBottomOf="@id/txt_price_item_sub_menu_food_list" />

	<ImageView
		android:id="@+id/img_btn_edit_item_sub_menu_food_list"
		android:layout_width="24dp"
		android:layout_height="24dp"
		android:layout_marginLeft="16dp"
		android:contentDescription="@string/app_name"
		android:scaleType="fitCenter"
		android:src="@drawable/ic_edit"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		tools:ignore="RtlHardcoded" />
	<ImageView
		android:id="@+id/img_btn_delete_item_sub_menu_food_list"
		android:layout_width="24dp"
		android:layout_height="24dp"
		android:layout_marginLeft="16dp"
		android:contentDescription="@string/app_name"
		android:scaleType="fitCenter"
		android:src="@drawable/ic_delete"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintLeft_toRightOf="@id/img_btn_edit_item_sub_menu_food_list"
		app:layout_constraintTop_toTopOf="parent"
		tools:ignore="RtlHardcoded" />


</androidx.constraintlayout.widget.ConstraintLayout>